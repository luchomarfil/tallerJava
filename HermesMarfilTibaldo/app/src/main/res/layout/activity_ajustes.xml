<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp">

    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:text="Nombre"
                android:id="@+id/textView2"
                android:textSize="12dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/editText"
                android:editable="true"
                android:text="nombre"
                android:inputType="text"
                android:textSize="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="12dp"
                android:text="Apellido"
                android:id="@+id/textView4"
                android:textIsSelectable="true"
                android:textSize="12dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/editText2"
                android:text="apellido"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:text="Sexo"
                android:id="@+id/textView5"
                android:textSize="12dp" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:text="Tamaño de Pictograma"
                android:id="@+id/textView6"
                android:textSize="12dp" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/spinner2"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:focusable="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="Habilitar Categorias"
                    android:id="@+id/textView7"
                    android:textSize="12dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pista"
                    android:id="@+id/checkBox"
                    android:textSize="11dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="establo"
                    android:id="@+id/checkBox2"
                    android:textSize="11dp"
                    android:checked="false" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="emociones"
                    android:id="@+id/checkBox3"
                    android:textSize="11dp"
                    android:checked="false" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="necesidades"
                    android:id="@+id/checkBox4"
                    android:textSize="11dp"
                    android:checked="false" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar Alumn@"
                android:id="@+id/textView8" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración general"
            android:id="@+id/textView9"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección IP del monitor"
                android:id="@+id/textView10"
                android:textSize="12dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:text="192.168.100.1"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puerto del Monitor"
                android:id="@+id/textView11"
                android:textSize="12dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:text="8080"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>